# Gateway Service Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME=Gateway Service
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# CORS Settings (comma-separated for lists)
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Database Settings
DATABASE_URL=postgresql://user:password@localhost:5432/hensaw
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Vector Engine gRPC Settings
ENGINE_GRPC_HOST=localhost
ENGINE_GRPC_PORT=50051

# Embedding Settings
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSION=1536

# Security Settings
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY=your-optional-api-key-here

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
