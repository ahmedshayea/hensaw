# Gateway Service Environment Configuration
# Copy this file to .env and update with your actual values
# WARNING: Never commit .env files with real credentials to version control

# Application Settings
APP_NAME=Gateway Service
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# CORS Settings (comma-separated for lists)
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Database Settings
# IMPORTANT: Replace with your actual database credentials
DATABASE_URL=postgresql://username:password@localhost:5432/hensaw
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Vector Engine gRPC Settings
ENGINE_GRPC_HOST=localhost
ENGINE_GRPC_PORT=50051

# Embedding Settings
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSION=1536

# Security Settings
# REQUIRED: Generate a strong secret key for production (e.g., using: openssl rand -hex 32)
SECRET_KEY=generate-a-strong-secret-key-here
# Optional: API key for external integrations
API_KEY=

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
